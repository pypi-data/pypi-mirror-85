  {% if report_description.measurement %}
  <{{ report_description.measurement.item_name }} xmlns:scale="http://docs.oasis-open.org/ns/emix/2011/06/siscale">
    <itemDescription>{{ report_description.measurement.item_description }}</itemDescription>
    <itemUnits>{{ report_description.measurement.item_units }}</itemUnits>
    <scale:siScaleCode>{{ report_description.measurement.si_scale_code }}</scale:siScaleCode>
    {% if report_description.measurement.power_attributes %}
      <hertz>{{ report_description.measurement.power_attributes.hertz }}</hertz>
      <voltage>{{ report_description.measurement.power_attributes.voltage }}</voltage>
      <ac>{{ report_description.measurement.power_attributes.ac|booleanformat }}</ac>
    {% endif %}
  </{{ report_description.measurement.item_name }}>
  {% endif %}