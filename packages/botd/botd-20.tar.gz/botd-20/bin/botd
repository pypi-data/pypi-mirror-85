#!/usr/bin/python3

from csl import Console, os, sys
from ofn import format
from prs import parse_cli
from trm import execute, os, sys, termreset

def daemon():
    pid = os.fork()
    if pid != 0:
        termreset()
        os._exit(0)
    os.setsid()
    os.umask(0)
    si = open("/dev/null", 'r')
    so = open("/dev/null", 'a+')
    se = open("/dev/null", 'a+')
    os.dup2(si.fileno(), sys.stdin.fileno())
    os.dup2(so.fileno(), sys.stdout.fileno())
    os.dup2(se.fileno(), sys.stderr.fileno())

def main():
    import obj
    obj.wd = "/var/lib/botd"
    cfg = parse_cli()
    print(format(cfg))
    if "w" not in cfg.opts:
        print("daemon mode")
        daemon()
    c = Console()
    c.scan("cms")
    c.scan("irc")
    c.init(cfg.sets.mods)
    c.wait()
     
execute(main)
os._exit(0)
