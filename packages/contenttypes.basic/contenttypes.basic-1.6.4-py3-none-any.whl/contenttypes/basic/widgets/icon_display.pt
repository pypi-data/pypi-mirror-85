<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      i18n:domain="contenttypes.basic"
      tal:omit-tag="">

    <style>
      .icon {margin-top:10px; display: inline-block;width: 5rem;height: 5rem;}
    </style>

    <div class="icon-value">${python:view.value}</div>

    <svg viewBox="0 0 100 100" class="icon" xmlns:xlink="http://www.w3.org/1999/xlink" tal:condition="python:view.value">
      <use id="selected_icon_id_${python:view.id}" xlink:href="${python:view.portal_url}/sprite-icons#${python:view.value}"></use>
    </svg>

</html>