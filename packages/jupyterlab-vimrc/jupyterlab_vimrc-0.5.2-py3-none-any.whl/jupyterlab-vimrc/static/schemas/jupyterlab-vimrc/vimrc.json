{
  "title": "vimrc",
  "description": "Settings to be applied to codemirror vim mode",
  "type": "object",
  "properties": {
    "unnamedplus": {
      "type": "boolean",
      "title": "set unnamedplus",
      "description": "If true, yanking without specifying a register will also yank to the system clipboard.",
      "default": false
    },
    "imap": {
      "type": "array",
      "title": "imap commands",
      "description": "[lhs, rhs] - e.g. \"imap\": [[\"ii\", \"<Esc>\"]]",
      "default": []
    },
    "nmap": {
      "type": "array",
      "title": "nmap commands",
      "description": "[lhs, rhs]",
      "default": [[]]
    },
    "vmap": {
      "type": "array",
      "title": "vmap commands",
      "description": "[lhs, rhs]",
      "default": [[]]
    },
    "inoremap": {
      "type": "array",
      "title": "inoremap commands",
      "description": "[lhs, rhs]",
      "default": [[]]
    },
    "nnoremap": {
      "type": "array",
      "title": "nnoremap commands",
      "description": "[lhs, rhs]",
      "default": [[]]
    },
    "vnoremap": {
      "type": "array",
      "title": "vnoremap commands",
      "description": "[lhs, rhs]",
      "default": [[]]
    }
  }
}
